class EventLoop {
    field Paddle paddle;
    field Ball ball;

    constructor EventLoop new(Paddle p, Ball b) {
        let paddle = p;
        let ball = b;
        return this;
    }

    method void dispose() {
        do Memory.deAlloc(this);
        return;
    }

    // run the game here
    method void runGame() {
        var bool exit;
        var char keyPress;

        let exit = false;

        while (~(exit)) {

            while (keyPress = 0) {
                let keyPress = Keyboard.keyPressed();
                do movePaddle(keyPress);
            }
            
            if (keyPress = 81)  { let exit = true; } // Shift+Q

            while (~(keyPress = 0)) {
                let keyPress = Keyboard.keyPressed();
                do movePaddle(keyPress);
                do Sys.wait(5);
            }
        }
        return;
    }

    method void movePaddle(int keyPress) {
        if (keyPress = 130) { do paddle.movePaddleLeft(); }
        if (keyPress = 132) { do paddle.movePaddleRight(); }
        return;
    }
}
