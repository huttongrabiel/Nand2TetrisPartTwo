class Ball {
    
    field int ballRadius;

    constructor Ball new(int radius) {
        let ballRadius = radius;
        return this;
    }

    method void drawBall() {
        do Screen.setColor(true);
        do Screen.drawCircle(240, ballRadius/2+5, 5);
        do Screen.setColor(false);
        return;
    }

    method void dispose() {
        do Memory.deAlloc(this);
        return;
    }
}
